/* pages/order/order.wxss */
page {
  height: 100%;
}

.order-wrapper {
  min-height: 100%;
  background-color: rgb(242, 244, 245);
}

.order-address {
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.order-adr-msg {
  margin-bottom: 12rpx;
  padding-left: 50rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #000;
  font-weight: bold;
}

.order-adr-msg text {
  padding-right: 40rpx;
}

.order-adr-detail {
  position: relative;
  padding: 0 35rpx 0 50rpx;
  font-size: 24rpx;
  color: rgba(0,0,0,0.5);
  line-height: 33rpx;
}

.order-adr-detail:before{
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-color: red;
}


