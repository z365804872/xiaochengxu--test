.order-adr-detail image {
  position: absolute;
  right: 0;
  top: 10rpx;
  width: 25rpx;
  height: 15rpx;
  transform: rotate(-90deg);
}

.order-detail {
  margin-bottom: 20rpx;
  padding: 40rpx 26rpx 0;
  background-color: #fff;
}

.order-de-msg {
  position: relative;
  padding-left: 150rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #dbdbdb;
}

.order-de-msg image {
  position: absolute;
  left: 0;
  top: 0;
  width: 126rpx;
  max-height: 90rpx;
}

.order-de-mr {
  font-size: 24rpx;
  line-height: 33rpx;
}

.order-de-mr view {
  margin-bottom: 9rpx;
  color: #000;
}

.order-de-mr view:nth-child(1) {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
}

.order-de-mr view:nth-child(2) {
  color: rgba(0,0,0,0.5);
}

.order-de-mr view:nth-child(3) {
  display: flex;
  font-size: 28rpx;
  line-height: 50rpx;
  align-content: center;
}

.order-de-mr view:nth-child(3) text {
  display: block;
  flex-grow: 1;
}

.order-de-mr view:nth-child(3) text:nth-child(1) {
  text-align: left;
}

.order-de-mr view:nth-child(3) text:nth-child(2) {
  text-align: right;
  font-weight: bold;
}

.order-de-ep {
  padding: 30rpx 0;
  border-bottom: 1px solid #dbdbdb;
}

.order-de-ep view {
  display: flex;
  line-height: 40rpx;
}

.order-de-ep view:nth-child(1) {
  margin-bottom: 16rpx;
}

.order-de-ep view text {
  display: block;
  flex-grow: 1;
  font-size: 28rpx;
}

.order-de-ep view text:nth-child(1) {
  text-align: left;
}

.order-de-ep view text:nth-child(2) {
  text-align: right;
}

.order-de-ep .cut-p {
  font-size: 24rpx;
  color: #e71418;
}

.order-de-ep .or-ep {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
}

.order-de-coupon {
  display: flex;
  padding: 30rpx 0;
  color: #000;
}

.order-de-coupon view {
  position: relative;
  flex-grow: 1;
  font-size: 28rpx;
  line-height: 40rpx;
}

.order-de-coupon view:nth-child(1) {

}

.order-de-coupon view:nth-child(2) {
  padding-right: 30rpx;
  font-size: 24rpx;
  color: rgba(0,0,0,0.5);
  text-align: right
}

.order-de-coupon view image {
  position: absolute;
  right: 0;
  top: 15rpx;
  width: 25rpx;
  height: 15rpx;
  transform: rotate(-90deg);
}

.order-price {
  margin-bottom: 20rpx;
  padding: 30rpx;
  line-height: 45rpx;
  background-color: #fff;
}

.order-price view {
  text-align: right;
  font-size: 24rpx;
  color: #000;
}

.order-price text {
  font-size: 32rpx;
  color: #e71418;
  font-weight: bold;
}

.order-explain {
  position: relative;
  padding: 30rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.order-explain view {
  position: relative;
  display: block;
  padding-left: 50rpx;
}

.order-explain image {
  position: absolute;
  right: 0;
  top: 50%;
  width: 25rpx;
  height: 15rpx;
  transform: rotate(-90deg) translate(0,-50%);
}

.order-submit {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 119rpx;
  padding: 23rpx 30rpx;
  z-index: 50;
  background-color: rgba(247,247,247,0.9);
  border-top: 1rpx solid #dbdbdb;
  box-sizing: border-box;
  line-height: 72rpx;
  justify-content: space-between;
}

.order-submit view:nth-child(1) {
  color: #000;
  font-size: 28rpx;
}

.order-submit view:nth-child(1) text {
  font-size: 44rpx;
  font-weight: bold;
}

.order-submit view:nth-child(2) {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  font-weight: bold;
}

.order-submit view:nth-child(2) text {
  padding: 15rpx 35rpx 15rpx;
  line-height: 72rpx;
  background-color: #ff484a;
  border-radius: 36rpx;
}
