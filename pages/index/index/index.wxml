<!--index.wxml-->
<scroll-view scroll-y class="container">
	<!-- 顶部搜索栏 -->
	<view class="section searchBar">
		<view class="section searBar-box">
			<navigator url="/pages/index/seach/index" hover-class="none">
				<image src="data:image/svg+xml;charset=utf-8,%3Csvg%20width%3D%2230%22%20height%3D%2230%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M30%2027.3L27.3%2030l-5.956-5.955c-2.23%201.67-4.971%202.695-7.974%202.695C5.985%2026.74%200%2020.754%200%2013.37%200%205.985%205.985%200%2013.372%200%2020.755%200%2026.74%205.985%2026.74%2013.37c0%203.001-1.025%205.744-2.694%207.973L30%2027.299zM13.372%203.821a9.548%209.548%200%200%200-9.55%209.55c0%205.273%204.274%209.55%209.55%209.55%205.272%200%209.55-4.277%209.55-9.55a9.55%209.55%200%200%200-9.55-9.55z%22%20fill%3D%22%23fff%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E" mode="aspectFill" class="search-icon" />
				<input type="text" name="searchBar" placeholder="搜索您想要的商品" placeholder-class="search-plac" bindtap="toSearch"
				/>
			</navigator>
		</view>
	</view><!-- end-section search searchBar -->

    	<!-- 首页轮播图 -->
	<view class="section section-swiper">
		<swiper class="slide" indicator-dots="{{indicator_dots}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}">
			<block wx:for="{{indexSlides}}" wx:key="{{index}}">
				<swiper-item>
					<navigator url="">
						<view style="background:url('{{item.photo}}');background-size:750rpx 360rpx;background-repeat:no-repeat;" mode="widthFix" class="slide-image" data-id="{{item.shoesId}}"></view>
					</navigator>
				</swiper-item>
			</block>
		</swiper>
	</view><!-- end-section section-swiper -->

	<!-- 品牌分类 -->
	<view class="section navBar">
		<view class="section nav-list" wx:for="{{brandHome}}" wx:key="{{index}}" wx:if="{{index<3}}">
			<navigator url="{{item.nav_urls}}" hover-class="none">
				<view class="nav-item" style="background:url('{{item.photo}}'); background-size:80rpx 80rpx;background-repeat:no-repeat;background-position:68rpx 10rpx;">
					<text class="item-text">{{item.brandName}}</text>
				</view>
			</navigator>
		</view>
		<view class="section nav-list-more">
			<navigator url="/pages/index/brand/index" hover-class="none">
				<view class="nav-item-more" style="background:url('../../../images/more.png'); background-size:41rpx 28rpx;background-repeat:no-repeat;background-position:30rpx 48rpx;">
					<text class="item-text"></text>
				</view>
			</navigator>
		</view>
	</view><!-- end-section navBar -->

	<!-- 活动入口 -->
	<view class="index-enter">
		<navigator url="" hover-class="none">
			<view  class="index-enter-left" style="background:url('../../../images/Group 5.png'); background-size:346rpx 160rpx;background-repeat:no-repeat; position: relative;">
				<view class="enter-left-icon" style="background:url('../../../images/431523877111_.pic.png');width:154rpx;height:46rpx; background-size:154rpx 46rpx;background-repeat:no-repeat;position: absolute;left:96rpx;top:40rpx;"></view>
				<text class="enter-text-left">SNCN活动</text> 
			</view>
		</navigator>
		<navigator url="" hover-class="none">
			<view  class="index-enter-right" style="background:url('../../../images/Group 6.png'); background-size:346rpx 160rpx;background-repeat:no-repeat; position: relative;">
				<view class="enter-right-icon" style="background:url('../../../images/zd@2x.svg'); width:42rpx;height:42rpx;background-size:42rpx 42rpx;background-repeat:no-repeat;position: absolute;left:150rpx;top:42rpx;"></view>
				<text class="enter-text-right">球鞋鉴定</text> 
			</view>
		</navigator>
	</view>

	<!-- 商品列表 -->
	<view  class="index-list">
		<view class = "list-title">
			<text  class="list-text-c">推荐商品</text>
			<text  class="list-text-e">Recommend</text>
		</view>

		<view class = "list-content">
			<view  class = "list-content-list" wx:for="{{listData}}"  wx:key="{{index}}">
				<navigator url="/pages/index/detail/index?shoesId={{item.shoesId}}" hover-class="none">
					<view class = "list-item-image"  style="background:url('{{item.photo}}');background-size:346rpx 186rpx;background-repeat:no-repeat;">
					</view>
					<view class = "list-item-name">
						{{item.shoesName}} 
					</view>
					<view class = "list-item-price">
						￥{{item.referencePrice}}
					</view>
					<view class = "list-sale-qiugou">
						<text class = "list-sale">出售 {{item.sellTotal}}|</text><text class = "list-qiugou">求购 {{item.wantBuyTotal}}</text>
					</view>
				</navigator>
			</view>
		</view>

	</view>

</scroll-view>


<nav-tab tabName="index"></nav-tab>