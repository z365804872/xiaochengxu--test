/**index.wxss**/
.container{
  background: #f7f7f7;
}
.section{
  width: 100%;
}
.searchBar{
  display: flex;
  justify-content: center;
  height: 100rpx;
  background: #b8b8b8;
}
.searchBar .searBar-box{
  display: inline-block;
  width: 710rpx;
  height: 64rpx;
  margin-top: 26rpx;
  background: #ccc;
}
.searchBar .searBar-box input{
  height: 64rpx;
  padding-left:60rpx;
  font-size:28rpx;
}
.searBar-box.tap{
  background: rgba(255,247,231,.9);
}
.search-plac{
  text-align: left;
  font-size: 11pt;

  margin-top: 4rpx;
  color: #fff;
  background: #ccc;
  font-size: 28rpx;
}
.searBar-box .search-icon{
  position: absolute;
  left: 45rpx;
  top: 45rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 1000;
}

.section-swiper .slide{
  width: 100%;
  height: 360rpx;
}
.section-swiper .slide-image{
  width: 100%;
  height: 360rpx;
  display: block;
}


.navBar{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 124rpx;
  background: #fff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.nav-list{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 36rpx;
}
.nav-item .item-img{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.nav-item .item-text{
  font-size: 24rpx;
  opacity: 0.8;
  font-family: PingFangSC-Semibold;
  color: #333333;
}
