<!--index.wxml-->
<view class="container">
	<view class="order-header">
		<view class="order-image">
			<view style="width:275rpx;height:200rpx;margin-top:30rpx;  background: url('{{detailData.photoList[0]}}'); background-size:275rpx 200rpx;background-repeat:no-repeat;">
				
			</view>
		</view>
		<view class="order-info">
			<view class="info-name">
				{{detailData.shoesName}}
			</view>
			<view class="info-time">
				{{detailData.shoesArticleNumber}} {{detailData.sellDate}}
			</view>
			<view class="info-price">
				<view class="price-num">
					￥{{detailData.sellMoney}}
				</view>
				<view class="price-type">
					发售价
				</view>
			</view>
		</view>		
	</view>
	<view class="order-content" wx:if="{{orderType==2}}">
		<view class="content-tab">
			<view class="tab-like" bindtap="changeTab1">
				<view class="{{baytab==0?'active':''}}">
					立刻购买
				</view> 
			</view>
			<view class="tab-qiugou" bindtap="changeTab2">
				<view class="{{baytab==1?'active':''}}">
					我要求购
				</view>
			</view>
		</view>
		<view class="content-selectSize" bindtap="showModal">
				{{detailData.defaultSize}}码 <view id="triangle-down"></view>
		</view>
		<view class="content-price"  wx:if="{{baytab==0}}">
				{{defaultPrise}}
		</view>
		<view class="content-price" wx:if="{{baytab==1}}">
			<label for="input2">￥</label><input name="input2" bindinput="bindKeyInput" type="digit" placeholder="0.00"/>
		</view>
		<view class="content-reference" wx:if="{{baytab==1}}">
			参考价：￥{{detailData.referencePrice}}
		</view>
	</view>

	<view class="order-content" wx:if="{{orderType==1}}">
		<view class="content-tab">
			<view class="tab-like" bindtap="changeTab1">
				<view class="{{baytab==0?'active':''}}">
					我要出售
				</view> 
			</view>
			<view class="tab-qiugou" bindtap="changeTab2">
				<view class="{{baytab==1?'active':''}}">
					快速出售
				</view>
			</view>
		</view>
		<view class="content-selectSize" bindtap="showModal" wx:if="{{baytab==0}}">
				{{detailData.defaultSize}}码 <view id="triangle-down"></view>
		</view>
		<view class="content-price" wx:if="{{baytab==0}}">
				<label for="input2">￥</label><input name="input2" bindinput="bindKeyInput" type="digit" placeholder="0.00"/>
		</view>
		<view class="content-reference" wx:if="{{baytab==0}}">
			参考价：￥{{detailData.referencePrice}}
		</view>
		<view  class="content-sellmoney"  wx:if="{{baytab==1}}">
			<view class="sellmoney-left">
				{{detailData.defaultSize}}
			</view>
			<view class="sellmoney-right">
				<view class="sellmoney-money">
					<view  class="sellmoney-money2">买家出价</view><view  class="sellmoney-money1">￥120.00</view>
				</view>
				<view class="sellmoney-time">
					2017/8/22 10:39:09
				</view>
			</view>

		</view>
	</view>	



	<view class="order-bottom" wx:if="{{orderType==2}}">
		<view class="order-liquan" wx:if="{{baytab==0}}">
			<view class="order-liquan-title">
			   	<text class="iconfont icon-wodeliquan"></text>	礼券选择
			</view>
			<view class="order-liquan-content"  bindtap="toCoupon">
				<view class="order-liquan-none">
					<text class="none-left">礼券:</text><text class="none-right">{{couponName}}</text>
				</view>
				<text class="iconfont icon-jiaobiao iconjiaobiao2"></text>
			</view>
		</view>

		<view class="order-qiugouTime" wx:if="{{baytab==1}}">
			<view class="order-liquan-title">
			   	<text class="iconfont icon-wodeliquan"></text>	求购时间
			</view>
			<view class="order-liquan-content">
				<view class="order-liquan-none">
					<view class="tab-long"  bindtap="changeTime" data-index="0">
						<view class="{{selectDay==0?'actives':''}}">
							{{orderData.sellDateList[0]}}
						</view> 
					</view>
					<view class="tab-three" bindtap="changeTime" data-index="1">
						<view class="{{selectDay==1?'actives':''}}">
							{{orderData.sellDateList[1]}}
						</view>
					</view>
					<view class="tab-seven" bindtap="changeTime" data-index="2">
						<view class="{{selectDay==2?'actives':''}}">
							{{orderData.sellDateList[2]}}
						</view>
					</view>
				</view>
			</view>
		</view>

		<view class="order-address">
			<view class="order-address-title">
			   	<text class="iconfont icon-dizhi1"></text>	收货地址
			</view>
			<view class="order-address-content" wx:if="{{addressList}}" bindtap="toAddress">
				<view class="order-address-has">
					<view  class="order-address-top">
						<text class="address-left">收货人：{{addressList.name}}</text><text class="address-right">手机号：{{addressList.mobile}}</text>
					</view>
					<view class="order-address-bottom">
						<text>{{addressList.address}}</text>
					</view>
				</view>				
				<text class="iconfont icon-jiaobiao iconjiaobiao"></text>
			</view>

			<view class="order-address-content" wx:else  bindtap="toAddress">
				<view class="order-address-has" style="line-height:140rpx;margin-left:20rpx;">
					新增地址
				</view>				
				<text class="iconfont icon-jiaobiao iconjiaobiao"></text>
			</view>
		</view>
		<view class="order-illustrate">
			<text class="iconfont icon-jianding1"></text> 交易说明<text class="iconfont icon-jiaobiao iconjiaobiao1"></text>
		</view>
	</view>


	<view class="order-bottom" wx:if="{{orderType==1}}">
		<view class="order-qiugouTime" wx:if="{{baytab==0}}">
			<view class="order-liquan-title">
			   	<text class="iconfont icon-wodeliquan"></text>	出售时间
			</view>
			<view class="order-liquan-content">
				<view class="order-liquan-none">
					<view class="tab-long"  bindtap="changeTime" data-index="0">
						<view class="{{selectDay==0?'actives':''}}">
							{{orderData.sellDateList[0]}}
						</view> 
					</view>
					<view class="tab-three" bindtap="changeTime" data-index="1">
						<view class="{{selectDay==1?'actives':''}}">
							{{orderData.sellDateList[1]}}
						</view>
					</view>
					<view class="tab-seven" bindtap="changeTime" data-index="2">
						<view class="{{selectDay==2?'actives':''}}">
							{{orderData.sellDateList[2]}}
						</view>
					</view>
				</view>
			</view>
		</view>


		<view class="order-liquan" wx:if="{{baytab==0}}">
			<view class="order-liquan-title">
			   	<text class="iconfont icon-wodeliquan"></text>	礼券选择
			</view>
			<view class="order-liquan-content"  bindtap="toCoupon">
				<view class="order-liquan-none">
					<text class="none-left">礼券:</text><text class="none-right">{{couponName}}</text>
				</view>
				<text class="iconfont icon-jiaobiao iconjiaobiao2"></text>
			</view>
		</view>



		<view class="order-address">
			<view class="order-address-title">
			   	<text class="iconfont icon-dizhi1"></text>	收益明细
			</view>
			<view class="order-address-content" wx:if="{{addressList}}" bindtap="toAddress">
				<view class="order-address-has">
					<view  class="order-address-top">
						<text class="address-left">服务费：</text><text class="shouyi-right">￥{{serviceFee}}</text>
					</view>
					<view  class="order-address-top">
						<text class="address-left">最终收益：</text><text class="shouyi-right">￥{{finalIncome}}</text>
					</view>
				</view>
			</view>
		</view>
		<view class="order-illustrate">
			<text class="iconfont icon-jianding1"></text> 交易说明<text class="iconfont icon-jiaobiao iconjiaobiao1"></text>
		</view>
	</view>

	<!--屏幕背景变暗的背景 -->
	<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
	<!--弹出框 -->
	<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
		<!-- 尺码选择 -->
		<view class="sizeList">
			<view class="sizeList-title">
				尺码选择
			</view>	
			<view class="sizeList-box">
				<view  wx:for="{{detailData.sizeList}}" wx:key="{{index}}"  class="sizeList-item {{detailData.defaultSize==item.shoesSize?'size-choode':''}}" data-index="{{item.shoesSize}}" data-price="{{item.sellMoney}}" bindtap="changeSize">
					<view class="sizeList-size">
						{{item.shoesSize}}码
					</view>
					<view class="sizeList-price">
						{{item.sellMoney}}
					</view>
				</view>	
			</view>			
		</view>
	</view>

	<view class="bottom-btn-box">
		<view  class="bottom-btn"  wx:if="{{orderType==2&&baytab==0}}"  data-index="3" bindtap="toPay">
			去付款({{defaultPrise}})
		</view>
		<view  class="bottom-btn"  wx:if="{{orderType==2&&baytab==1}}"  data-index="4" bindtap="toPay">
			去付款(￥{{defaultPrise1||0}})
		</view>
		<view  class="bottom-btn2"  wx:if="{{orderType==1&&baytab==0}}"  data-index="1">
			去上架
		</view>
		<view  class="bottom-btn3"  wx:if="{{orderType==1&&baytab==1}}"  data-index="2">
			出售
		</view>		
	</view>



</view>
