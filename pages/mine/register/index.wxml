<!--pages/mine/register/index.wxml-->
<view class="container">
    <view class="logo">
        <image src="../../../images/register_logo.png"></image>
    </view>
    <form onsubmit="login">
        <view class="phone">
            <text class="iconfont icon-shoujihao1"></text>
            <input type="number" name="phone" maxlength="11" placeholder-class="input-placeholder"
                   placeholder="请填写手机号"/>
        </view>
        <view class="password">
            <text class="iconfont icon-yanzhengma"></text>
            <input type="number" name="password" maxlength="6" placeholder-class="input-placeholder"
                   placeholder="请填写短信验证码"/>
            <button class="btn btn-sms {{hasSendSms ? 'send-sms' : ''}}"
                    catchtap="sendSms">{{hasSendSms ? "重新发送60s" : '发送'}}
            </button>
        </view>
        <button form-type="submit" class="btn btn-submit">登录</button>
    </form>
</view>
