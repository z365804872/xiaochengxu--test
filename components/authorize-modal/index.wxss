


.modal{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #999999;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 500;
}

.modal-con{
    width: 500rpx;
    height: 250rpx;
    border-radius: 30rpx;
    background-color: #fff;
    overflow: hidden;
    display: flex;
    flex-direction: column;

}

.modal-content{
    border-bottom: 1rpx solid #EFEFEF;
    min-height: 100rpx;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
}

.get-user-info-btn{
    height: 100rpx;
    width: 100%;
    background-color: #4AC4FD;
    color: #fff;

}