.modal{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(4,4,15,0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 500;

}

.modal-con{
    width: 540rpx;
    height: 250rpx;
    border-radius: 28rpx;
    background-color: rgba(248,248,248,0.82);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    z-index: 550;
}

.modal-content{
    border-bottom: 1rpx solid #EFEFEF;
    min-height: 100rpx;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    border-bottom: 1rpx solid rgba(0,0,80,0.1);
    background-color: rgba(248,248,248,0.82);
}

.get-user-info-btn{
    height: 86rpx;
    width: 100%;
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #007AFF;
    text-align: center;
    background-color: rgba(248,248,248,0.82);
}