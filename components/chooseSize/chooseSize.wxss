/* components/action/action.wxss */

@import '../../styles/global.wxss';
@import "../../styles/iconfont.wxss";

.action-container{
    background-color: rgba(0,0,0,0.5);
    z-index: 100;
}

.content{
    z-index: 150;
}

.bottom-btn{
    box-shadow: 0 0 8rpx 0 rgba(0,0,0,0.20);
    margin-left: -30rpx;
    margin-right: -30rpx;
}

.action-text{
    min-height: 434rpx;
    padding: 60rpx 0;
}
.guanbi{
    font-size: 24rpx;
    position: absolute;
    right: 30rpx;
    top:28rpx; 
}
.height-136{
    height: 136rpx;
}
.item-image{
    width: 187.5rpx;
    height: 100rpx;
    margin-top: 18rpx;
    float: left;
}
.size-info{
    float: left;
    height: 136rpx;
    width: 400rpx;
    margin-left: 20rpx;
    position: relative;
}
.cut-price{
    margin-top: 25rpx;
    color:rgba(255,72,74,1);
    font-size: 24rpx;
}
.has-choose{
    position: absolute;
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    bottom: 20rpx;
}



.contents{
    background: #F5F5F5;
    padding-left: 16rpx;
    box-sizing: border-box;
    padding-top: 6rpx;
    height: 584rpx;
    overflow: scroll;
}
.contents::-webkit-scrollbar {
    display: none;
}
.size-item{
    width: 162rpx;
    height: 162rpx;
    float: left;
    background: #fff;
    margin-left: 14rpx;
    margin-top: 14rpx;
    text-align: center;
    color:rgba(51,51,51,1);
}
.choose{
    background:rgba(12,171,245,1);
    color: #fff;
}
.size{
    width: 162rpx;
    height: 46rpx;
    font-size:32rpx;
    font-family:Arial-Black;
    font-weight:900;

    margin-top: 36rpx;
}
.price{
    width: 162rpx;
    height: 34rpx;
    margin-top: 10rpx;
    font-size:24rpx;
    font-family:PingFangSC-Light;

}

.fast-buy{
    width:186rpx;
    height:72rpx;
    background:rgba(12,171,245,1);
    border-radius:200rpx;
    text-align: center;
    line-height: 72rpx;
    font-size:28rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(255,255,255,1);
    float: right;
    margin-right: 30rpx;
    margin-top: 24rpx;
}
.total-price{
    font-size:44rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:rgba(0,0,0,1);
    line-height:120rpx;
    float: left;
    margin-left: 30rpx;
}
.no-active{
    background:rgba(0,0,0,0.15);
    color:rgba(255,255,255,1);
}
