@import "./styles/global.wxss";
@import './styles/iconfont.wxss';
/*****************global***************/
Page{
  font-family: PingFangSC-Regular;
  background-color: #ffffff;
  font-size: 28rpx;
  letter-spacing: 0;
  word-break: break-all;
  color: #000000;
}

page .iconfont{
  color: #000000;
}

page .icon-jiaobiao{
  font-size: 20rpx!important;
}

page .icon-up{
  color: #FF484A;
}

page .icon-down{
  color: #47C99D;
}

.layout{
  padding: 0 30rpx;
}

.match-iphone-x{
  padding-bottom: 56rpx;
}

.nav-tab{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 88rpx;
  border-top: 1rpx solid #D8D8D8;
  flex-direction: row;
  background-color: #fff;
  z-index: 500;
}

.nav-tab-item{
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding: 0;
  padding-bottom: 10rpx;
}

.nav-tab-item > view:first-child{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-tab-item-icon{
  width: 48rpx;
  height: 48rpx;
}

.nav-tab-item-icon image{
  width: 100%;
  height: 100%;
  display: block;
}

.nav-tab-item-title{
  font-size: 24rpx;
  color: #858585;
  letter-spacing: 0;
  line-height: 24rpx;
  font-family: PingFangSC-Regular;
}

.nav-tab-item-selected{
  color: #3C407E;
}

.nav-tab-item::after{
  border: 0;
}
